<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/card_view_notice"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    card_view:cardCornerRadius="1dp"
                                    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:textSize="15sp"
            android:id="@+id/purpose_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="10dp"
            android:text="Purpose"/>

        <TextView
            android:gravity="end"
            android:id="@+id/purpose_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="10dp"
            android:text="Car"
           />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/purpose_label"
            android:background="@color/divider_color"/>

        <TextView
            android:textSize="15sp"

            android:id="@+id/amount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/purpose_label"
            android:paddingBottom="10dp"
            android:text="Amount"/>

        <TextView
            android:gravity="end"

            android:id="@+id/amount_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/purpose_value"
            android:paddingBottom="10dp"
            android:text="500"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/amount_label"
            android:background="@color/divider_color"
            android:paddingBottom="10dp"/>

        <TextView
            android:textSize="15sp"

            android:id="@+id/address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/amount_label"
            android:paddingBottom="10dp"
            android:text="Address"/>

        <TextView

            android:gravity="end"
            android:id="@+id/street_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/amount_content"
            android:text="123456"
            />
        <TextView
            android:layout_below="@id/street_content"
            android:id="@+id/city_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@id/city_content"
            android:id="@+id/state_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@id/state_content"
            android:id="@+id/pincode_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/last_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/pincode_content"
            android:background="@color/divider_color"/>

        <TextView
            android:gravity="end"
            android:textSize="15sp"

            android:id="@+id/tenure_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/last_divider"
            android:paddingBottom="10dp"
            android:text="Tenure"
            android:visibility="visible"/>

        <TextView
            android:text="10"
            android:id="@+id/tenure_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/last_divider"
            android:paddingBottom="10dp"
            android:visibility="visible"
           />

    </RelativeLayout>

</android.support.v7.widget.CardView>